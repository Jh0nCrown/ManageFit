@{
    ViewData["Title"] = "Dashboard Administrador";
    Layout = "~/Views/Admin/_LayoutAdministrador.cshtml";
}

<script>
    window.history.replaceState(null, null, window.location.href);
    // Reemplaza la última entrada en el historial y previene el uso del botón "Atrás"
       history.replaceState(null, document.title, location.href);
    window.addEventListener("popstate", function (event) {
        history.pushState(null, document.title, location.href);
    });
</script>

<div class="container-flex">

    <div class="admin-info">
        <img class="user-img" src="/img/user.png" alt="boton de salida">
        <div style="text-align:
        center; color: #EE1C25; font-size: 48px;
        font-style: italic; font-weight: 900; line-height: 70px;
        word-wrap: break-word">
            Bienvenido/a Administrador
        </div>
    </div>    

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success tempdata-message">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="chart-section">
        <div class="chart-container">
            <canvas id="estadisticasChart"></canvas>
        </div>
        <div class="chart-container">
            <canvas id="clientesChart"></canvas>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    var ctx = document.getElementById('estadisticasChart').getContext('2d');
    var estadisticasChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Clientes', 'Entrenadores', 'Personas'],
            datasets: [{
                label: 'Total por Sede',
                data: [
    @ViewBag.TotalClientes,
    @ViewBag.TotalEntrenadores,
    @ViewBag.TotalPersonas
                    ],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.8)', // rojo pastel claro (más evidente)
                    'rgba(255, 105, 97, 0.8)',  // rojo coral suave
                    'rgba(255, 160, 122, 0.8)'  // rojo suave anaranjado
                ],
                borderColor: [
                    'rgba(255, 99, 132, 0.8)', // rojo pastel claro
                    'rgba(255, 105, 97, 0.8)',  // rojo coral suave
                    'rgba(255, 160, 122, 0.8)'  // rojo suave anaranjado
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Estadísticas de Clientes, Entrenadores y Personas por Sede'
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    // Gráfico de pastel para Clientes Premium y General
    var ctx2 = document.getElementById('clientesChart').getContext('2d');
    var clientesChart = new Chart(ctx2, {
        type: 'pie',
        data: {
            labels: ['Clientes Premium', 'Clientes General'],
            datasets: [{
                label: 'Distribución de Membresía',
                data: [@ViewBag.ClientesPremium, @ViewBag.ClientesGeneral],
                backgroundColor: ['rgba(255, 69, 0, 0.8)', 'rgba(255, 140, 0, 0.8)'],
                borderColor: ['rgba(255, 69, 0, 1)', 'rgba(255, 140, 0, 1)'],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { position: 'top' },
                title: { display: true, text: 'Distribución de Clientes Premium y General' }
            }
        }
    });
</script>

<style>
    .container-flex {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    .admin-info {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .user-img {
        width: 150px;
        height: auto;
    }

    .tempdata-message {
        background-color: transparent;
        border: none;
        color: #EE1C25;
        font-size: 24px;
        font-weight: 900;
        font-style: italic;
        text-transform: uppercase;
    }

    /* Sección de gráficos */
    .chart-section {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        justify-content: center;
        width: 100%;
    }

    /* Estilo para los contenedores de gráficos */
    .chart-container {
        width: 45%;
        max-width: 600px;
    }
</style>


            