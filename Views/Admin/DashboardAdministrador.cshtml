@{
    ViewData["Title"] = "Dashboard Administrador";
    Layout = "~/Views/Admin/_LayoutAdministrador.cshtml";
}

<script>
    window.history.replaceState(null, null, window.location.href);
    // Reemplaza la última entrada en el historial y previene el uso del botón "Atrás"
       history.replaceState(null, document.title, location.href);
    window.addEventListener("popstate", function (event) {
        history.pushState(null, document.title, location.href);
    });
</script>

<div class="container-flex">

    <div class="container-flex" style="position: relative;">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success tempdata-message">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="admin-info">
            <img class="user-img" src="/img/user.png" alt="boton de salida">
            <div style="text-align:
        center; color: #EE1C25; font-size: 35px;
        font-style: italic; font-weight: 900; line-height: 70px;
        word-wrap: break-word">
                Bienvenido/a Administrador
            </div>
        </div>


        <div class="chart-section">
        <div class="chart-container">
            <canvas id="estadisticasChart"></canvas>
        </div>
        <div class="chart-container">
            <canvas id="clientesChart"></canvas>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    let estadisticasChartInstance;
    let clientesChartInstance;

    function renderEstadisticasChart() {
        const ctx = document.getElementById('estadisticasChart').getContext('2d');
        
        if (estadisticasChartInstance) {
            estadisticasChartInstance.destroy();
        }

        estadisticasChartInstance = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Clientes', 'Entrenadores', 'Personas'],
                datasets: [{
                    label: 'Total por Sede',
                    data: [
                        @ViewBag.TotalClientes,
                        @ViewBag.TotalEntrenadores,
                        @ViewBag.TotalPersonas
                    ],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.8)',
                        'rgba(255, 105, 97, 0.8)',
                        'rgba(255, 160, 122, 0.8)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(255, 105, 97, 1)',
                        'rgba(255, 160, 122, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Estadísticas de Clientes, Entrenadores y Personas por Sede'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }

    function renderClientesChart() {
        const ctx2 = document.getElementById('clientesChart').getContext('2d');
        
        if (clientesChartInstance) {
            clientesChartInstance.destroy();
        }

        clientesChartInstance = new Chart(ctx2, {
            type: 'pie',
            data: {
                labels: ['Clientes Premium', 'Clientes General'],
                datasets: [{
                    label: 'Distribución de Membresía',
                    data: [@ViewBag.ClientesPremium, @ViewBag.ClientesGeneral],
                    backgroundColor: ['rgba(255, 69, 0, 0.8)', 'rgba(255, 140, 0, 0.8)'],
                    borderColor: ['rgba(255, 69, 0, 1)', 'rgba(255, 140, 0, 1)'],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'top' },
                    title: { display: true, text: 'Distribución de Clientes Premium y General' }
                }
            }
        });
    }

    function initializeCharts() {
        renderEstadisticasChart();
        renderClientesChart();
    }

    window.addEventListener('resize', initializeCharts);
    document.addEventListener('DOMContentLoaded', initializeCharts);
</script>

