@model NET_MVC.Models.ClienteModel

@{
    ViewData["Title"] = "Informacion Cliente Asignado";
    Layout = "~/Views/Entrenador/_LayoutEntrenador.cshtml";
}

<div class="container cliente-info-container">
    <div class="cliente-info-up">
        <div class="cliente-titulo">
            <h1>CLIENTE <span style="color: #EE1C25;">@(Model?.refMembresia?.ToUpper() ?? "Desconocido")</span></h1>
        </div>
    </div>

    <div class="cliente-info-right">
        <div class="form-group">
            <input type="text" class="form-control" value="Nombre: @(Model?.Nombre ?? "Desconocido")" readonly />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" value="Identificación: @(Model?.Identificacion ?? "Desconocido")" readonly />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" value="Telefono: @(Model?.Telefono ?? "Desconocido")" readonly />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" value="Género: @(Model?.Genero ?? "Desconocido")" readonly />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" value="Mebresia: @(Model?.refMembresia ?? "Desconocido")" readonly />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" value="Objetivo: @(TempData["Objetivo"] ?? "No definido")" readonly />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" value="Días restantes de membresia: @(Model?.DiasRestantes ?? 0)" readonly />
        </div>
    </div>
</div>


<style>
    /* Estilo general del contenedor */
    .cliente-info-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
        padding: 20px;
        border-radius: 10px;
    }

    /* Estilo del título */
    .cliente-info-up {
        text-align: center;
        margin-bottom: 20px;
    }

    .cliente-titulo h1 {
        font-size: 60px;
        font-weight: 900;
        color: #EE1C25;
        margin: 0;
    }

    /* Estilo del contenedor de los campos */
    .cliente-info-right {
        width: 100%;
        max-width: 500px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        /* Estilo de los campos de información */
        .cliente-info-right .form-group {
            width: 100%;
            margin-bottom: 15px;
        }

        .cliente-info-right .form-control {
            width: 100%;
            padding: 10px;
            border-radius: 30px;
            border: 1px solid #ddd;
            background-color: #f9f9f9;
            font-size: 16px;
            color: black;
            text-align: justify;
        }

    
</style>
