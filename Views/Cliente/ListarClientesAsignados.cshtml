@model List<NET_MVC.Models.ClienteModel>

@{
    ViewData["Title"] = "Listar Cliente";
    Layout = "~/Views/Entrenador/_LayoutEntrenador.cshtml";
}

<div class="container-grande">
    <div class="text-Asignar" style="text-align: center;
    color: #EE1C25; font-size: 50px; font-style: italic;
    font-weight: 900; line-height: 70px; word-wrap: break-word">
        CLIENTES
    </div>

    <div class="filter-total-container">
        <h3 class="total-text">Total encontrados: <span id="total-clientes">@Model.Count</span></h3>
        <div class="filter-container">
            <select id="filter" name="filter" class="form-control custom-select">
                <option value="all">Todos</option>
                <option value="premium">Clientes Premium</option>
                <option value="general">Clientes Generales</option>
                <option value="masculino">Género Masculino</option>
                <option value="femenino">Género Femenino</option>
                <option value="no-especificado">Género No especificado</option>
            </select>
        </div>
    </div>

    <div class="table-container">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Telefono</th>
                    <th>Membresia</th>
                    <th class="small-column">Días restantes de membresía</th>
                </tr>
            </thead>
            <tbody id="tabla-clientes">
                @foreach (var cliente in Model)
                {
                    <tr>
                        <td>@cliente.Identificacion</td>
                        <td>@cliente.Nombre</td>
                        <td>@cliente.Telefono</td>
                        <td>@cliente.refMembresia</td>
                        <td>@cliente.fechaMembresia</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <button type="button" id="filtrar" class="btn mt-3">Filtrar</button>
</div>

<!-- Asegúrate de que jQuery esté cargado -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        // Cuando se presiona el botón de filtrar
        $('#filtrar').on('click', function () {
            var selectedFilter = $('#filter').val(); // Obtiene el valor del filtro seleccionado

            // Realiza la solicitud Ajax
            $.ajax({
                url: '@Url.Action("Filtrar", "Cliente")', // Acción en el controlador
                type: 'POST',
                data: { filter: selectedFilter }, // Enviamos el filtro seleccionado al servidor
                success: function (response) {

                    // Limpiar el cuerpo de la tabla
                    $('#tabla-clientes').empty();

                    // Recorre los clientes devueltos y los agrega a la tabla
                    $.each(response.clientes, function (index, cliente) {
                        $('#tabla-clientes').append(
                            `<tr>
                                    <td>${cliente.identificacion}</td>
                                    <td>${cliente.nombre}</td>
                                    <td>${cliente.telefono}</td>
                                    <td>${cliente.refMembresia}</td>
                                    <td>${cliente.fechaMembresia}</td>
                                </tr>`
                        );
                    });

                    // Actualiza el total de clientes mostrados
                    $('#total-clientes').text(response.totalClientes);
                },
                error: function () {
                    alert("Error al aplicar el filtro.");
                }
            });
        });
    });
</script>



