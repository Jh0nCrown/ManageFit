@model NET_MVC.Models.ClienteModel

@{
    ViewData["Title"] = "Transferir Sede";
    Layout = "~/Views/Admin/_LayoutAdministrador.cshtml";
}


<div class="container-grande">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success tempdata-message">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="cliente-info-left">
        <div class="cliente-titulo">
            <h1>Transferir de Sede</h1>
        </div>
    </div>

    <div class="cliente-info-right">

        <form id="buscarClienteForm" method="post" asp-action="cambiarSede" asp-controller="Cliente">
            <div class="search-bar">


                <h3>Id Sede Actual: <span>@ViewBag.SedeActual</span></h3>

                <div class="form-group">
                    <div class="form-field">
                        <h4>Identificación Cliente:</h4>
                        <input asp-for="Identificacion" type="text" id="Identificacion" name="idCliente" required>
                        <span id="identificacion-error" class="text-danger error-message"></span>
                    </div>


                    <div class="form-field">
                        <h4>Seleccionar Sede Destino:</h4>
                        <select id="idSedeDestino" name="idSedeDestino" class="form-control">
                            <option value="">Seleccionar Sede</option>
                            @foreach (var sede in ViewBag.SedesDisponibles)
                            {
                                <option value="@sede.IdSede">@sede.IdSede</option>
                            }
                        </select>
                        <span id="sede-destino-error" class="text-danger error-message"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Confirmar Cambio</button>
            </div>
        </form>

        @if (TempData["ErrorMessageTransc"] != null)
        {
            <div class="error-message">
                @TempData["ErrorMessageTransc"]
            </div>
        }

    </div>
</div>


<style>

        .error-message {
            color: red;
            font-size: 16px;
            text-align: center;
        }

    .tempdata-message {
        position: absolute;
        border: none;
        left: 20px;
        top: 30px;
        background-color: rgba(238, 28, 37, 0.8);
        color: white;
        font-size: 14px;
        font-weight: bold;
        font-style: italic;
        text-transform: uppercase;
        padding: 10px 15px;
        border-radius: 5px;
        z-index: 1000;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-field input {
        margin-bottom: 8px;
        width: 100%;
        border: none;
        outline: none;
        background: none;
        font-size: 1.2rem;
        padding: 10px 10px;
        background: white;
        border-radius: 20px;
        height: 40px;
    }

    .form-field h4, .data-field h4 {
        margin-right: 15px;
        padding: 8px;
        background-color: #969393;
        border-radius: 10px;
        color: black;
        white-space: nowrap;
    }

    .container-grande {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
    }

    .search-bar {
        width: 500px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 30px;
        margin-bottom: 20px;
    }

    .cliente-titulo h1 {
        font-size: 50px;
        font-weight: 900;
        line-height: 70px;
        color: #EE1C25;
    }

    .custom-select {
        margin-top: 10px;
        text-align: center;
        text-align-last: center;
        border-radius: 20px;
        padding: 0;
        font-size: 1.2rem;
        border: 2px solid #dcdcdc;
        background-color: #f9f9f9;
        appearance: none;
        background-image: url('/img/flechaAbajo.png');
        background-position: right 10px center;
        background-repeat: no-repeat;
        background-size: 15px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 500px;
    }

    .form-field, .data-field {
        display: flex;
        align-items: center;
    }



    .search-bar button {
        background-color: #EE1C25;
        margin: 0;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 40px;
        text-decoration: none;
        display: inline-flex;
        justify-content: center;
        align-items: center;
        width: 190px;
        height: 45px;
        font-family: Inter, sans-serif;
        font-weight: bold;
        font-size: 20px;
        font-style: italic;
        line-height: 70px;
        word-wrap: break-word;
    }
</style>

