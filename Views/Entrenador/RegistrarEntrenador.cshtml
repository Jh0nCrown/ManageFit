@model EntrenadorModel

@{
    ViewData["Title"] = "Registrar Entrenador";
    Layout = "~/Views/Admin/_LayoutAdministrador.cshtml";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/RegistroEntrenador.css">
</head>

<div class="container container-grande">
    <div class="text-registrar"
         style="text-align: center;
            color: #EE1C25;
            font-size: 50px;
            font-style: italic;
            font-weight: 900;
            line-height: 70px;
            word-wrap: break-word">
        REGISTRAR ENTRENADOR
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }


    <div class="login-container">
        <div class="wrapper">
            <img class="cliente-img" src="/img/user.png" alt="Logo">


            <form asp-action="RegistrarEntrenador" asp-controller="Entrenador" method="post" class="form p-3 mt-3">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-field">
                    <h4>Nombre:</h4>
                    <input asp-for="Nombre" type="text" required>
                    <span asp-validation-for="Nombre" class="text-danger error-message"></span>
                </div>

                <div class="form-field">
                    <h4>Identificación:</h4>
                    <input asp-for="Id" type="text" required>
                    <span asp-validation-for="Id" class="text-danger error-message"></span>
                </div>

                <div class="data-field flex items-center space-x-4">
                    <h4 class="w-1/4">Fecha de Contratación:</h4>
                    <div class="relative max-w-sm w-full datapicker-styles">
                        <input id="contrato-datepicker" asp-for="fechaInicioContrato" type="date"
                               class="bg-white border border-gray-300 text-gray-900 text-sm
                      rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                               placeholder="Seleccionar fecha" required>
                    </div>
                    <span asp-validation-for="fechaInicioContrato" class="text-danger error-message"></span>
                </div>

                <div class="form-field">
                    <h4>Teléfono:</h4>
                    <input asp-for="Telefono" type="text">
                    <span asp-validation-for="Telefono" class="text-danger error-message"></span>
                </div>

                <div class="form-field form-field-especialidad">
                    <h4>Genero:</h4>
                    <select asp-for="Genero" class="form-control custom-select">
                        <option value="NE">No especificado</option>
                        <option value="M">Masculino</option>
                        <option value="F">Femenino</option>
                    </select>
                    <span asp-validation-for="Genero" class="text-danger error-message"></span>
                </div>

                <div class="form-field form-field-especialidad">
                    <h4>Área de especialidad:</h4>
                    <select asp-for="Especialidad" class="form-control custom-select">
                        <option value="Crossfit">Crossfit</option>
                        <option value="Fuerza">Fuerza</option>
                        <option value="Reducción de peso">Reducción de peso</option>
                        <option value="Culturismo">Culturismo</option>
                    </select>
                    <span asp-validation-for="Especialidad" class="text-danger error-message"></span>
                </div>

                <div class="form-field">
                    <h4>Salario:</h4>
                    <input asp-for="Salario" type="text" required>
                    <span asp-validation-for="Salario" class="text-danger error-message"></span>
                </div>

                <div class="form-field">
                    <h4>Contraseña:</h4>
                    <input asp-for="Contraseña" type="text" required>
                    <span asp-validation-for="Contraseña" class="text-danger error-message"></span>
                </div>

                <button type="submit" class="btn mt-3">Guardar</button>
            </form>
        </div>
    </div>
</div>

<script>
    $(function () {
        $("#contrato-datepicker").datepicker({
            dateFormat: "dd/mm/yy", // Formato día/mes/año
            changeMonth: true,
            changeYear: true,
            yearRange: "1900:+0"
        });
    });
</script>

<style>
    .error-message {
        margin-top: 0;
        color: #d9534f;
        font-size: 0.9rem;
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        white-space: nowrap;
        max-width: 150px;
        overflow: hidden;
        text-overflow: ellipsis; /* Mostrar "..." si el texto es demasiado largo */
    }

    .alert.alert-danger {
        position: absolute;
        top: 120px; 
        right: 20px; 
        background-color: #f8d7da; 
        color: #721c24; 
        border: 1px solid #f5c6cb; 
        padding: 15px; 
        border-radius: 5px; 
        font-size: 16px; 
        z-index: 1000; 
    }

    .form-field {
        position: relative;
        padding-right: 160px; 
    }

    input[type="text"],
    select {
        width: 100%; /* Llenar todo el contenedor */
        padding: 10px;
        font-size: 1rem;
        border-radius: 8px;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

    .custom-select {
        text-align: center;
        text-align-last: center;
        border-radius: 20px;
        padding: 0;
        font-size: 1.2rem;
        border: 2px solid #dcdcdc;
        background-color: #f9f9f9;
        appearance: none;
        background-image: url('/img/flechaAbajo.png');
        background-position: right 10px center;
        background-repeat: no-repeat;
        background-size: 15px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .custom-select option {
            text-align: center;
            padding: 10px;
            font-size: 1.2rem;
        }
</style>
