    .data-field {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

        .data-field .relative {
            flex: 1; 
            max-width: 400px; 
        }

    .error-message {
        margin-top: 0;
        color: #d9534f;
        font-size: 0.7rem;
        position: absolute; 
        right: -5px; 
        top: 50%; 
        transform: translateY(-50%); 
        white-space: normal; 
        line-height: 1.2; 
        max-width: 95px; 
    }

    .form-field {
        position: relative; 
        padding-right: 95px; 
    }

    #contrato-datepicker {
        min-width: 190px;
