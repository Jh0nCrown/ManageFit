
@{
    ViewData["Title"] = "Agregar Ejercicio";
    Layout = "~/Views/Entrenador/_LayoutEntrenador.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
</head>

<div class="container container-grande">

    <div class="login-container">

        <img class="cliente-img" src="/img/excercise.png" alt="Logo">

        <div class="wrapper">

            <div class="text-registrar" style="text-align: center;
            color: #EE1C25; font-size: 50px; font-style: italic; font-weight: 900;
            line-height: 70px; word-wrap: break-word">
                AÑADIR EJERCICIO
            </div>

            <form method="post" class="form p-3 mt-3">

                <div class="form-field">
                    <h4>Identificación:</h4>
                    <input type="text" id="Identificacion" required>
                    <span id="persona-existe" class="text-danger error-message"></span>
                    <span id="identificacion-error" class="text-danger error-message"></span>
                </div>

                <div class="form-field">
                    <h4>Nombre:</h4>
                    <input type="text">
                    <span id="nombre-error" class="text-danger error-message" style="margin-left: 10px;"></span>
                    <span class="text-danger error-message"></span>
                </div>

                <div class="form-field">
                    <h4>Numero de Repeticiones:</h4>
                    <input type="text">
                    <span id="nombre-error" class="text-danger error-message" style="margin-left: 10px;"></span>
                    <span class="text-danger error-message"></span>
                </div>

                <div class="form-field">
                    <h4>Numero de Series:</h4>
                    <input type="text">
                    <span id="nombre-error" class="text-danger error-message" style="margin-left: 10px;"></span>
                    <span class="text-danger error-message"></span>
                </div>


                <div class="form-field">
                    <h4>Dia de la semana:</h4>
                    <select class="form-control custom-select">
                        <option value="">Seleccione Dia</option>
                        <option value="lunes">Lunes</option>
                        <option value="martes">Martes</option>
                        <option value="miercoles">Miercoles</option>
                        <option value="Jueves">Jueves</option>
                        <option value="Viernes">Viernes</option>
                        <option value="Sabado">Sabado</option>
                    </select>
                    <span id="genero-error" class="text-danger error-message" style="margin-left: 10px;"></span>
                    <span class="text-danger error-message"></span>
                </div>

                <button type="button" id="guardarCliente" class="btn mt-3">Guardar</button>

            </form>

        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>



