@model EjercicioModel
@{
    ViewData["Title"] = "Eliminar Ejercicio";
    Layout = "~/Views/Entrenador/_LayoutEntrenador.cshtml";
}

<div class="container-grande">


    <div class="text-eliminar">
         ElIMINAR EJERCICIO
    </div>

    <form id="buscarClienteForm" method="post" asp-action="EliminarEjercicio">
        <div class="search-bar">
            <input type="text" asp-for="IdEjercicio" id="identificacion" name="IdEjercicio" placeholder="Identificación:">

            <button type="submit" class="btn btn-primary">Eliminar</button>
        </div>
    </form>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="error-message">
            @TempData["ErrorMessage"]
        </div>
    }
    else if (!string.IsNullOrEmpty(ViewData["ValidationError"] as string))
    {
        <div class="error-message">
            @ViewData["ValidationError"]
        </div>
    }

</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


<style>
    .text-eliminar {
        margin-bottom: 20px;
        text-align: center;
        color: #EE1C25;
        font-size: 45px;
        font-style: italic;
        font-weight: 900;
        line-height: 70px;
        word-wrap: break-word;
    }

    .container-grande {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
    }

    .search-bar {
        width: 400px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        margin-bottom: 20px;
    }

    .cliente-img {
        width: 100px;
        height: 100px;
        margin-bottom: 20px;
    }

    .form-centrado {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        width: 100%;
        max-width: 400px;
    }

        .form-centrado input[type="text"] {
            width: 100%;
            padding: 10px;
            font-size: 1.2rem;
            border-radius: 20px;
            border: 1px solid #ccc;
            outline: none;
        }

    .error-message {
        color: red;
        font-size: 16px;
        text-align: center;
    }

    .container-grande {
        position: relative;
        min-height: 520px;
    }

    .search-bar input[type="text"] {
        width: 100%;
        border: none;
        outline: none;
        background: none;
        font-size: 1.2rem;
        padding: 10px 10px;
        background: white;
        border-radius: 20px;
        height: 40px;
        margin-bottom: 10px;
    }

    .search-bar button {
        background-color: #EE1C25;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 40px;
        margin-left: 10px;
        text-decoration: none;
        display: inline-flex;
        justify-content: center;
        align-items: center;
        width: 190px;
        height: 45px;
        font-family: Inter, sans-serif;
        font-weight: bold;
        font-size: 20px;
        font-style: italic;
        line-height: 70px;
        word-wrap: break-word;
    }

</style>