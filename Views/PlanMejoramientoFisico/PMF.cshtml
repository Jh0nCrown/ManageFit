@model List<NET_MVC.Models.EjercicioModel>

@{
    ViewData["Title"] = "Modificar PMF";
    Layout = "~/Views/Entrenador/_LayoutEntrenador.cshtml";
}
<div class="container-grande">
    <div class="text-asignar"> PMF </div>
    @using Microsoft.AspNetCore.Http
    <label class="bg-white">Fecha de la ultima Valoración: @(Context.Session.GetString("FechaValoracion") ?? "No encontrada")</label>
    <div class="table-container">
        <table class="table table-bordered">
            <thead>
                <tr>

                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Repeticiones</th>
                    <th>Series</th>
                    <th>Dia de la semana</th>
                </tr>
            </thead>
            <tbody id="tabla-clientes">
                @foreach (var ejercicio in Model)
                {
                    <tr>
                        <td>@ejercicio.IdEjercicio</td>
                        <td>@ejercicio.NombreString</td>
                        <td>@ejercicio.Repeticiones</td>
                        <td>@ejercicio.Series</td>
                        <td>@ejercicio.Dia</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<style>
    .bg-white {
        padding: 10px 15px;
        background-color: #969393;
        border-radius: 20px;
        color: black;
        margin-right: 15px;
        max-width: 750px; /* Define el límite máximo de ancho */
        overflow: hidden; /* Oculta el contenido que exceda el ancho */
        text-overflow: ellipsis; /* Agrega "..." si el texto es demasiado largo */
        white-space: nowrap; /* Evita que el texto se envuelva en múltiples líneas */
    }
    .text-asignar {
        margin-top: 40px;
        text-align: center;
        color: #EE1C25;
        font-size: 50px;
        font-style: italic;
        font-weight: 900;
        line-height: 70px;
        word-wrap: break-word;
    }
    .fecha-label {
        font-weight: bold;
        font-size: 16px;
        margin-right: 10px;
    }

    .fecha-valoracion {
        font-size: 16px;
        color: #555;
    }
    .container-grande {
        display: flex;
        flex-direction: column;
        width: 100%;
        height: 100%;
    }

    .table-container {
        width: 95%;
        margin: 0 auto;
        max-height: 270px;
        overflow-y: auto;
        margin-top: 20px;
    }

    .table thead th {
        background-color: #b3b3b3;
        color: white;
        text-align: center;
    }

    .table tbody tr td {
        background-color: white;
        text-align: center;
    }

    .table-bordered td, .table-bordered th {
        border: 2px solid #dee2e6;
    }

    .table-container::-webkit-scrollbar {
        width: 18px;
    }

    .table-container::-webkit-scrollbar-track {
        background: #ffffff;
        border-radius: 10px;
    }

    .table-container::-webkit-scrollbar-thumb {
        background-color: #4c4c4c;
        border-radius: 10px;
        border: 3px solid #ffffff;
    }

        .table-container::-webkit-scrollbar-thumb:hover {
            background-color: #333333;
        }

    .table-container::-webkit-scrollbar-button:single-button {
        background-color: white;
        display: block;
        height: 18px;
        border-radius: 5px;
        background-size: 8px;
        background-repeat: no-repeat;
        background-position: center;
    }

        .table-container::-webkit-scrollbar-button:single-button:vertical:decrement {
            background-image: url('/img/flechaArriba.png');
        }

        .table-container::-webkit-scrollbar-button:single-button:vertical:increment {
            background-image: url('/img/flechaAbajo.png');
        }

    .table-container::-webkit-scrollbar-button {
        width: 18px;
        height: 18px;
    }

    .table-container::-webkit-scrollbar-corner {
        background: #e0e0e0;
    }
</style>
